{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["cdg1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/recalculate-scores",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/auto-consume",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/retry-notifications",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/trigger-followup",
      "schedule": "0 10 * * *"
    }
  ]
}
